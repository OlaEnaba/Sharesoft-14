<style type="text/css">

  h1 {
    color: #FF3399;
  }

   p {
    color: #0099FF;
  }

</style>

<h1>Editing '<%= @project.name %>' Project</h1>
 
<%= form_for @project do |f| %>
  <p>
    <%= f.label :goals %><br>
    <%= f.text_area :goals %>
  </p>

 
  <p>
    <%= f.label :milestones %><br>
    <%= f.text_area :milestones %>
  </p>

  <p>
    <%= f.label :requirements %><br>
    <%= f.text_area :requirements %>
  </p>
 
  <p>
    <%= f.submit ("Edit Project") %>
  </p>
<% end %>